<FluentLabel Typo="Typography.H1" Class="@Class" Style="@Style">
    @ChildContent
</FluentLabel>

<style>
    .h1-label {
        line-height: 1.25;
        margin-top: 0.25em !important;
        margin-bottom: 0.5em !important;
    }
</style>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string? Class { get; set; } = "h1-label";
    [Parameter] public string? Style { get; set; } = string.Empty;
}
