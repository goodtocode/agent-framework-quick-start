<FluentLabel Typo="Typography.H3" Class="@Class" Style="@Style">
    @ChildContent
</FluentLabel>

<style>
    .h3-label {
        line-height: 1.15;
        margin-top: 0.1em !important;
        margin-bottom: 0.25em !important;
    }
</style>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string? Class { get; set; } = "h3-label";
    [Parameter] public string? Style { get; set; } = string.Empty;
}